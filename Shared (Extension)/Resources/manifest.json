{
    "manifest_version": 3,
    "default_locale": "en",

    "name": "Skipless Chessly",
    "description": "Removes the skip button from Chessly",
    "version": "1.0",

    "icons": {
        "48": "images/icon-48.png",
        "64": "images/icon-64.png",
        "96": "images/icon-96.png",
        "120": "images/icon-120.png",
        "128": "images/icon-128.png",
        "152": "images/icon-152.png",
        "167": "images/icon-167.png",
        "256": "images/icon-256.png",
        "512": "images/icon-512.png"
    },

    "content_scripts": [{
        "js": [ "content.js" ],
        "matches": [ "*://chessly.com/*" ]
    }],

    "permissions": [ ]
}
